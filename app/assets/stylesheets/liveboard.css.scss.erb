/* Liveboard */

.fliers {
  display:inline-block;
  vertical-align: top;
  margin-top: 20px;
  margin-right: 7px;
  margin-left: 7px;
  width: 215px;
  height: 250px;
  border: 1px #cacaca solid;
  background-color: #fbfbfb

}

.shadow {
    -moz-box-shadow: 1px 1px 3px #cacaca;
    -webkit-box-shadow: 1px 1px 3px #cacaca;
    box-shadow: 1px 1px 3px #cacaca;
}

.flimg {
    height: 160px;
    width: 195px;
    margin-bottom: 5px;
}
.flierdata {
    margin: 10px;
}
.fltit {
    color: #5195f9;
    line-height: 1.5em;
    font-size: 1.3em;
}

.fltit:hover {
    color: #000;
}

.fladd {
    position: relative;
    left: 9px;

}
